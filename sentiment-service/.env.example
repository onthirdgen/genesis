# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=sentiment-service
KAFKA_INPUT_TOPIC=calls.transcribed
KAFKA_OUTPUT_TOPIC=calls.sentiment-analyzed
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# Model Configuration
MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
USE_GPU=false
# MODEL_CACHE_DIR=/app/models

# Sentiment Analysis Configuration
ESCALATION_THRESHOLD=0.5
# NEUTRAL_RANGE=(-0.2, 0.2)  # Not directly configurable via env

# Service Configuration
SERVICE_NAME=sentiment-service
LOG_LEVEL=INFO
